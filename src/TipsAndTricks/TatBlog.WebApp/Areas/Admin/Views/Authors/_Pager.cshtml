  if (authors.PageCount > 1)
  {
    <div class="text-center my-4">
      @if (authors.HasPreviousPage)
      {
        <a asp-area="Admin"
     asp-controller="Authors"
     asp-action="@actionName"
     asp-route-p="@(authors.PageNumber -1)"
     asp-route-ps="@authors.PageSize"
         class="btn btn-info">
          <i class="fa fa-arrow-left"></i>
          Trang trước
        </a>
      }
      else
      {
        <button type="button"
                class="btn btn-outline-secondary"
                disabled>
          Trang trước
        </button>
      }

      @if (authors.HasNextPage)
      {
        <a asp-area="Admin"
     asp-controller="Authors"
     asp-action="@actionName"
     asp-route-p="@(authors.PageNumber + 1)"
     asp-route-ps="@authors.PageSize"
         class="btn btn-info">
          Trang sau
          <i class="fa fa-arrow-right"></i>
        </a>
      }
      else
      {
        <button type="button"
                class="btn btn-outline-secondary"
                disabled>
          Trang sau
          <i class="fa fa-arrow-right"></i>
        </button>
      }
    </div>
  }
}