@model TagFilterModel

@{
  ViewData["Title"] = "Danh sách thẻ";

  var tags = ViewBag.Items as IPagedList<TagItem>;

  var queryFilter = "";
  if (Model != null)
  {
    queryFilter = Model.GetQueryString();
  }
}
<h2>
  Danh sách thẻ
</h2>

<partial name="_TagFilterPane" />

@if (tags != null && tags.Count > 0)
{
  <table id="#tbl" class="table table-responsive table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">Tên thẻ</th>
        <th class="text-center">Mô tả</th>
        <th class="text-center">Số bài viết</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var tag in tags)
      {
        <tr>
          <td>
            <a asp-area="Admin"
           asp-controller="Tags"
           asp-action="Edit"
           asp-route-id="@tag.Id"
               class="text-bold">
              @tag.Name
            </a>
          </td>
          <td>
            @tag.Description
          </td>
          <td align="center">
            @tag.PostCount
          </td>
          <td align="center">
            <a asp-area="Admin"
           asp-controller="Tags"
           asp-action="Delete"
           asp-route-filter="@queryFilter"
           asp-route-id="@tag.Id"
           asp-route-p="@tags.PageNumber"
           asp-route-ps="@tags.PageSize"
               class="btn btn-danger change-status-post align-content-start"
               onclick="return confirm('Bạn có chắc chắn muốn xóa bài viết này không??')">
              Xóa
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>

  <partial name="_Pager" model="@queryFilter" />
}
else
{
  <h1 class="text-danger">
    Không tìm thấy thẻ nào
  </h1>
}


