@model TagFilterModel 

<form asp-area="Admin"
      asp-controller="Tags"
      asp-action="Index"
      method="get"
      class="row py-2 gy-2 gx-5 align-items-center justify-content-center">
  <div class="col-auto">
    <label class="visually-hidden" asp-for="Keyword"></label>
    <input type="text"
           class="form-control"
           asp-for="Keyword"
           placeholder="Nhập từ khóa ..." />
  </div>

  <div class="col-auto">
    <a asp-area="Admin"
       asp-action="Index"
       asp-controller="Tags"
       class="btn btn-warning">Bỏ lọc</a>
    <button type="submit" class="btn btn-primary">Tìm/Lọc</button>
    <a asp-area="Admin"
       asp-controller="Tags"
       asp-action="Edit"
       class="btn btn-success">
      Thêm mới
    </a>
  </div>
</form>
