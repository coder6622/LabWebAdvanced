@model IList<TagItem>

<div class="mb-4">
  <h3 class="text-success mb-2">
    Các thẻ
  </h3>

  <div class="">
    @foreach (var item in Model)
    {
      <a asp-controller="Blog"
       asp-action="Tag"
       asp-route-slug="@item.UrlSlug"
         title="@item.Description"
         class="btn btn-outline-secondary my-1">
        @item.Name
        <span>(@item.PostCount)</span>
      </a>
    }
  </div>
</div>