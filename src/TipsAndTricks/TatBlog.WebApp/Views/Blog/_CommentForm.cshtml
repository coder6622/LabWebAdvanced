@model CommentEditModel

<form asp-area=""
      asp-controller="Blog"
      asp-action="PostById"
      class="justify-content-center my-5">
  <div class="col-lg-12">
    <h4 class="comment-title">Thêm bình luận</h4>
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PostId" />

    <div class="row">
      <div class="row mb-3">
        <label asp-for="NameUserComment"
               class="col-sm-2 col-form-label">
        </label>

        <div class="col-sm-10">
          <input type="text" class="form-control"
                 asp-for="NameUserComment" />
          <span asp-validation-for="NameUserComment"
                class="text-danger"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Email"
               class="col-sm-2 col-form-label">
        </label>

        <div class="col-sm-10">
          <input type="text" class="form-control"
                 asp-for="Email" />
          <span asp-validation-for="Email"
                class="text-danger"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Content"
               class="col-sm-2 col-form-label">
        </label>

        <div class="col-sm-10">
          <textarea type="text" class="form-control"
                    asp-for="Content" rows="5"></textarea>
          <span asp-validation-for="Content"
                class="text-danger"></span>
        </div>
      </div>




    </div>
  </div>
  <div class="row">
    <div class="d-flex justify-content-end">
      <button type="submit"
              class="btn btn-primary">
        Gửi bình luận
      </button>
    </div>
  </div>
</form>
