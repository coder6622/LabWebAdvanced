@model Post

@{
  var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
      ? "/images/image_1.jpg"
      : $"/{Model.ImageUrl}";
}
<article class="blog-entry mb-4">
  <div class="card">
    <div class="row g-2">
      <div class="col-md-4">
        <img src="@imageUrl"
             class="card-img"
             alt="@Model.Title" />
      </div>
      <div class="col-md-8 py-1">
        <h5 class="card-title">
          @Model.Title
        </h5>
        <p class="card-text">
          <small class="text-muted">
            Tác giả:
          </small>
          <span class="text-primary">
            @Model.Author.FullName
          </span>
          <small class="text-muted">
            Chủ đề
          </small>
          <span class="text-primary">
            @Model.Category.Name
          </span>
          <small class="text-muted">
            Ngày
          </small>
          <span class="text-primary">
            @Model.PostedDate
          </span>
        </p>

        <p class="card-text">
          @Html.Raw(Model.ShortDescription)
        </p>

        <div class="tag-list">
          <partial name="_TagList" model="@Model.Tags" />
        </div>

        <div class="text-end pe-2">
          <a asp-controller="Blog"
             asp-action="Post"
             asp-route-year="@Model.PostedDate.Year"
             asp-route-month="@Model.PostedDate.Month"
             asp-route-day="@Model.PostedDate.Day"
             asp-route-slug="@Model.UrlSlug">
            Xem chi tiết
          </a>
        </div>
      </div>
    </div>
  </div>
</article>